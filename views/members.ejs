<!DOCTYPE html>
<html lang="en">

<head>
  <title>Members</title>
  <%- include('templates/head') %>

  <link rel="stylesheet" href="/styles/loader.css">
  <link rel="stylesheet" href="/styles/members.css">
</head>

<body>
  <template>
    <div class="pokemon-card position-relative">
      <div class="inner">
        <img src="/assets/pokemon-card-back.webp" alt="Pokemon Card" class="back" width="200" draggable="false">
        <div class="front">
          <img src="" alt="" width="200" draggable="false">
          <p class="text-white mt-3"></p>
        </div>
      </div>
    </div>
  </template>

  <div id="container">
    <%- include('templates/nav') %>

    <div id="loader-wrapper">
      <div class="pokeball-loader"></div>
      <h1>Loading...</h1>
    </div>

    <main class="justify-content-start px-4 mb-5 gap-4" hidden>
      <div id="heading-wrapper" class="w-100 text-start">
        <h1 class="heading mb-2">Pokemon Matching Game</h1>
        <p>Match all the cards to win!</h2>
      </div>

      <div id="game">
        <div id="top">
          <div id="kpis" class="during-game" hidden>
            <div class="kpi" data-kpi="TOTAL_PAIRS">
              <span>3</span>
              <p>Total pairs</p>
            </div>
            <div class="kpi" data-kpi="PAIRS_LEFT">
              <span>3</span>
              <p>Pairs left</p>
            </div>
            <div class="kpi" data-kpi="PAIRS_MATCHED">
              <span>0</span>
              <p>Pairs matched</p>
            </div>
            <div class="kpi" data-kpi="COUNT_OF_FLIPS">
              <span>0</span>
              <p>Flips</p>
            </div>
          </div>
        </div>

        <div id="left">
          <div id="control-panel" class="d-flex flex-column justify-content-center align-items-center p-4">
            <div id="difficulty-toggle" class="game-setup">
              <label>
                <input type="radio" name="difficulty" value="easy" checked>
                <span>Easy</span>
              </label>
              <label>
                <input type="radio" name="difficulty" value="medium">
                <span>Medium</span>
              </label>
              <label>
                <input type="radio" name="difficulty" value="hard">
                <span>Hard</span>
              </label>
            </div>
            <div id="start" class="btn btn-primary game-setup">Start</div>

            <div id="timer" class="during-game" hidden></div>
            <div id="reset" class="btn btn-primary during-game" hidden>Reset</div>
          </div>
        </div>

        <div id="board">
          <div id="overlay">
            <h1 id="start-text" class="fw-normal">Select a difficulty and start the game to play!</h1>
            <h1 id="losing-text" hidden>Game Over</h1>
            <h1 id="winning-text" hidden>You won!</h1>
          </div>
        </div>
      </div>
    </main>

    <%- include('templates/footer') %>
  </div>

  <script src="/scripts/game-state.js"></script>
  <script src="/scripts/progressbar.min.js"></script>
  <script src="/scripts/members.js" type="module"></script>
  <script src="/scripts/game.js" type="module"></script>
</body>

</html>